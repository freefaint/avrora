{
  "extends": "./tsconfig.dev.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "src/**/*test*",
    "src/**/*stories*"
  ]
}